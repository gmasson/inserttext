{
    "manifest_version": 3,
    "name": "InsertText",
    "version": "0.9.0",
    "description": "Extens√£o do Google Chrome para criar e salvar blocos de textos e reutiliza-los em qualquer site.",
    "action": {
        "default_popup": "popup.html",
        "default_title": "InsertText"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["content.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}